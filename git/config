
[user]
    name  = Jared Russell
    email = jared@jaredru.com
[help]
    format = html
[core]
    editor = vim
[push]
    default = simple
[pull]
    rebase = merges
[rebase]
    autoStash = true



[alias]
    lg  = log --graph --format=format:'%C(blue)%h %Creset%an %C(green)(%ar) %C(yellow)%d%n        %Creset%s%n' --abbrev-commit --date-order
    lga = log --graph --format=format:'%C(blue)%h %Creset%an %C(green)(%ar) %C(yellow)%d%n        %Creset%s%n' --abbrev-commit --date-order --all

    stat = status --short --branch
    out  = checkout

    sup = submodule update --recursive --init

    d  = diff
    dp = !"f() { git diff ${1-HEAD}~ ${1-HEAD}; }; f"
    dc = diff --cached

    dt  = difftool
    dtp = !"f() { git difftool ${1-HEAD}~ ${1-HEAD}; }; f"
    dtc = difftool --cached

    mt = mergetool

    save = !"git stash save --include-untracked && git stash apply"
    trim = !"git remote | xargs git remote prune && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs -r git branch -D"



[credential]
    helper = osxkeychain



[delta]
    line-numbers-left-style  = "#A7A7A7"
    line-numbers-right-style = "#A7A7A7"
    line-numbers-minus-style = "#CF6A4C"
    line-numbers-zero-style  = "#5F5A60"
    line-numbers-plus-style  = "#8F9D6A"
    hunk-header-style        = syntax
    minus-style                   = syntax "#281E1E"
    minus-non-emph-style          = syntax "#281E1E"
    minus-emph-style              = syntax "#3C1E1E"
    minus-empty-line-marker-style = normal "#281E1E"
    zero-style                    = syntax
    plus-style                    = syntax "#1E281E"
    plus-non-emph-style           = syntax "#1E281E"
    plus-emph-style               = syntax "#1E3C1E"
    plus-empty-line-marker-style  = normal "#1E281E"
    line-numbers = true
    map-styles   = bold purple => syntax magenta, bold cyan => syntax blue
    navigate     = true
    syntax-theme = base16
[core]
    pager  = delta
[interactive]
    diffFilter = delta --color-only
[diff]
    colorMoved = default
[merge]
    conflictstyle = zdiff3

[difftool]
    prompt = false
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
    tool = Kaleidoscope
    indentHeuristic = true

[mergetool]
    prompt = false
    keepBackup = false
[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustExitCode = true
[merge]
    tool = Kaleidoscope

[filter "media"]
    clean = git-media-clean %f
    smudge = git-media-smudge %f



[url "https://github.com/"]
    insteadOf = git@github.com:

